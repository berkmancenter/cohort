<%= error_messages_for :tag => @tag %>
<fieldset class="form tag">
  <legend><%= @tag.new_record? ? "Add Tag" : "Edit Tag \"#{h @tag.name_for_display}\"" %></legend>
  <% form_for @tag do|f| %>
    <p class="field"><label for="tag_tag">Tag:</label>
    <%= f.text_field :title, {:disabled => !@tag.removable} %>
    </p>
    <p class="field"><label for="tag_description">Description:</label>
    <%= f.text_area :description, :size => '40x4' %>
    </p>
    <p class="field"><label for="tag_parent_id">Parent tag:</label>
    <%= f.select :parent_id, Tag.parent_select_options,{},:disabled => !@tag.removable %>
    </p>
    <%= submit_tag @tag.new_record? ? "Add Tag" : "Edit Tag" %>
  <% end %>
</fieldset>
