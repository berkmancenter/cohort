%h1
  Edit your mail campaign
- form_for(@freemailer_campaign) do |f|
  = f.error_messages
  %p
    = f.label :title
    %br
    = f.text_field :title
  %p
    Contacts:
    %br
    = @freemailer_campaign.contact_names
  %p
    = f.label :from
    %br
    = f.text_field :from
  %p
    = f.label :subject
    %br
    = f.text_field :subject
  %p
    = f.label :body_template
    %br
    = f.text_area :body_template
  %p
    = f.submit 'Update'
    / = f.submit 'Send (implement)'
  %div#merge_info
    %h3 Available Merges
    %ul
      %li 
        %b [[first name]]
        yields 
        %i John
      %li 
        %b [[last name]]
        yields 
        %i Doe
      %li 
        %b [[middle name]]
        yields 
        %i H.
      %li 
        %b [[name]]
        yields 
        %i John H. Doe
      %li 
        %b [[email]]
        yields 
        %i me@johndoe.com
      %li 
        %b [[address]]
        yields:
        %br
        %i 
          123 Some Pl.
          %br
          My Town, USA  12345
           
= link_to 'Show', @freemailer_campaign
|
= link_to 'All Campaigns', freemailer_campaigns_path
